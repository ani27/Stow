<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vp6.anish.stow.UploadDownloadActivity"
    tools:showIn="@layout/app_bar_upload_download"
    android:background="@drawable/bgggg"
    android:orientation="vertical"
    android:baselineAligned="false"
    >

    <Button
        android:id="@+id/upload"

        android:text="Upload"
        android:onClick="upload"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#02030D"
        android:shadowDx="-3"
        android:shadowDy="6"
        android:shadowRadius="2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="186dp" />

    <Button
        android:id="@+id/download"

        android:text="Download"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:onClick="download"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#02030D"
        android:shadowDx="-3"
        android:shadowDy="6"
        android:layout_marginTop="20dp"
        android:shadowRadius="2"
        android:layout_below="@+id/upload"
        android:layout_alignLeft="@+id/upload"
        android:layout_alignStart="@+id/upload" />
</RelativeLayout>
